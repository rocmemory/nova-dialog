{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "env.d.ts",
    "vite.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noEmit": false,
    "outDir": "dist"
  }
}